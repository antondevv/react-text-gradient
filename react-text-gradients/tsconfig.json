{
  "compilerOptions": {
    "rootDir": "src",
    "target": "ES2018",
    "noEmitOnError": true,
    "lib": ["ES2015", "DOM"],
    "strict": true,
    "jsx": "react",
    "sourceMap": true,
    "esModuleInterop": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "lib/types",
    "moduleResolution": "Node",
    "types": ["@testing-library/jest-dom"]
  },
  "exclude": [
    "node_modules",
    "lib",
    "rollup.config.js",
    "src/**/*.test.ts",
    "src/**/*.test.tsx"
  ]
}
